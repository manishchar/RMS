<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/back_nav"
tools:context="alina.com.rms.activities.headquaterActivities.AddUserForHeaduater">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dip"
    android:padding="10dip"
    android:background="@color/whiteColor"
    >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:orientation="horizontal"
        android:id="@+id/radioBtnGroup"
        android:visibility="gone"
        >

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:textSize="15sp"
            android:checked="true"
            android:id="@+id/radioBtnCivil"
            android:textColor="@android:color/darker_gray"
            android:text="Civil works" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:textSize="15sp"
            android:id="@+id/radioBtnElectrical"
            android:textColor="@android:color/darker_gray"
            android:text="Electrical works" />
    </RadioGroup>
    <TextView
        android:id="@+id/placeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Group"
        android:layout_marginTop="5dip"
        android:layout_weight="1.8"
        android:inputType="textCapWords"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/darker_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smalltextbox"
        >
        <Spinner
            android:layout_marginTop="3dip"
            android:id="@+id/spinner"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/whiteColor"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/droparrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dip"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Section"
        android:inputType="textCapWords"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/darker_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smalltextbox"
        >
        <Spinner
            android:layout_marginTop="3dip"
            android:id="@+id/spinner1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/whiteColor"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/droparrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dip"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:inputType="textCapWords"
                android:textSize="18sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/darker_gray"
                />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="14sp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_marginTop="3dip"
                android:background="@drawable/smalltextbox"
                android:inputType="textAutoComplete" />

        </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:visibility="gone"
        android:inputType="textCapWords"
        android:textSize="18sp"
        android:layout_marginTop="10dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/darker_gray"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/radioBtnGroup1"
        >

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:checked="true"
            android:id="@+id/radioBtnSP"
            android:textColor="@android:color/darker_gray"
            android:text="SP" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:id="@+id/radioBtnSSp"
            android:textColor="@android:color/darker_gray"
            android:text="SSP" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:id="@+id/radioBtnTSS"
            android:textColor="@android:color/darker_gray"
            android:text="TSS" />
    </RadioGroup>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:id="@+id/submitBtn"
        android:clickable="false"
        android:background="@drawable/submit_btn"
        android:text="Submit"
        android:textColor="@color/whiteColor"
        android:paddingBottom="5dp"
        />

</LinearLayout>
</RelativeLayout>
